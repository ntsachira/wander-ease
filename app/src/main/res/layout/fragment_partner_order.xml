<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.partner.PartnerOrderFragment" >

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/partner_order_tablayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/partner_order_tab_New_orders_tabitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partner_order_tab_New_orders" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/partner_order_tab_completed_tabitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_orders_completed_orders" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/partner_order_tab_fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partner_order_tablayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
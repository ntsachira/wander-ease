<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminSettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/admin_settings_toolbar_toolbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/actionModeCloseDrawable"
        app:title="@string/settings" />

    <Button
        android:id="@+id/admin_settings_profile_information_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/baseline_arrow_right"
        android:gravity="start"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/admin_profile_information"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_settings_toolbar_toolbar"
        app:rippleColor="#B8B8B8" />

    <Button
        android:id="@+id/admin_settings_logout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/logout"
        android:textColor="#F44336"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_settings_profile_information_button"
        app:rippleColor="#B8B8B8" />
</androidx.constraintlayout.widget.ConstraintLayout>
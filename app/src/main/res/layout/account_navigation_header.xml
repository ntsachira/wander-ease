<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/account_navigation_profile_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/female_person_icon" />

    <TextView
        android:id="@+id/account_navigation_header_textView_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/account_navigation_menu_header_button_edit_profile"
        app:layout_constraintEnd_toStartOf="@+id/account_naviagtion_header_settings_button"
        app:layout_constraintStart_toEndOf="@+id/account_navigation_profile_imageView"
        app:layout_constraintTop_toTopOf="@+id/account_navigation_profile_imageView" />

    <ImageButton
        android:id="@+id/account_naviagtion_header_settings_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_corners"
        android:scaleType="centerCrop"
        android:tint="#009688"
        app:layout_constraintBottom_toBottomOf="@+id/account_navigation_profile_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/account_navigation_profile_imageView"
        app:srcCompat="@drawable/settings_gear_options_icon" />

    <Button
        android:id="@+id/account_navigation_menu_header_button_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00A92626"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text="@string/edit_profile"
        android:textColor="@color/primary"
        android:textSize="12sp"
        app:icon="@drawable/ic_edit_square"
        app:iconTint="#009688"
        app:layout_constraintBottom_toBottomOf="@+id/account_navigation_profile_imageView"
        app:layout_constraintStart_toStartOf="@+id/account_navigation_header_textView_username"
        app:layout_constraintTop_toBottomOf="@+id/account_navigation_header_textView_username" />
</androidx.constraintlayout.widget.ConstraintLayout>